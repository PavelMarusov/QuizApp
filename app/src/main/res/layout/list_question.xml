<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>



    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ProgressBar
        android:id="@+id/quest_progress_bar"
        android:layout_width="176dp"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/qustion_answer_bg"
        android:backgroundTintMode="@color/colorPink"
        android:progressBackgroundTint="@color/colorPink"
        android:progressTint="@color/colorPink"
        android:indeterminate="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="/"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quest_progress_bar" />

    <TextView
        android:id="@+id/quest_progressStart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/quest_progress_bar" />

    <TextView
        android:id="@+id/quest_progressEnd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="10"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/quest_progress_bar" />


    <TextView
        android:id="@+id/quest_title_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Сколько будет 2+2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quest_answer1_tv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/qustion_answer_bg"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quest_title_tv" />

    <TextView
        android:id="@+id/quest_answer2_tv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/qustion_answer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quest_answer1_tv"/>
    <TextView
        android:id="@+id/quest_answer3_tv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/qustion_answer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quest_answer2_tv"/>
    <TextView
        android:id="@+id/quest_answer4_tv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/qustion_answer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quest_answer3_tv"/>
    <Button
        android:id="@+id/quest_skip_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/quest_answer4_tv"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="SKIP"
        android:background="@drawable/quest_skip_bg"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>