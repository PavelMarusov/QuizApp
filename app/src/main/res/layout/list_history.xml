<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>



    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/history_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Category"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/history_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Mixed"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/history_category"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/correct_answer"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history_category"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:text="Correct answers:"
        android:textColor="#801F2041"
        />
    <TextView
        android:id="@+id/answer_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history_title"
        app:layout_constraintStart_toEndOf="@id/correct_answer"
        android:layout_marginTop="5dp"
        android:textColor="#801F2041"
        android:textSize="12sp"
        android:text=" 8/10"/>
    <TextView
        android:id="@+id/difficulty"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Difficulty:"
        android:textColor="#801F2041"
        app:layout_constraintTop_toBottomOf="@id/correct_answer"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/difficulty_t"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/answer_count"
        app:layout_constraintStart_toEndOf="@id/difficulty"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/popup_menu_iv"
        android:layout_width="18dp"
        android:layout_height="5dp"
        android:src="@drawable/ic_points"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/data"
        android:layout_width="75dp"
        android:layout_height="10dp"
        android:text="12 may 2019 20:32"
        android:textSize="9sp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#801F2041"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>