<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#ffffff</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="backgroundColor">#1DE9B6</item>
        <item name="colorButtonNormal">@color/colorGreenPrimary</item>
    </style>
    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">#F50057</item>
        <item name="colorAccent">#E8A9A9</item>
        <item name="backgroundColor">#FDCACA</item>
        <item name="colorButtonNormal"> @color/colorRed</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#40A5E8</item>
        <item name="colorPrimaryDark">#3E3B9E</item>
        <item name="colorAccent">#5C70CD</item>
        <item name="backgroundColor">#609EDF</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="DarckTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#232629</item>
        <item name="colorPrimaryDark">#0D0D15</item>
        <item name="colorAccent">#5D5E60</item>
        <item name="backgroundColor">#121519</item>
        <item name="colorButtonNormal">#F2FFFFFF</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
